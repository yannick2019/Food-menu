@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid hero mb-2">
    <div class="row h-100 align-items-center">
        <div class="col-12 text-center">
            <h1 class="display-1 text-white mb-4 animated-title">Delicious Eats</h1>
            <p class="lead text-white mb-5 animated-subtitle text-[16px]">Explore our mouthwatering menu</p>
            <a asp-controller="Menu" asp-action="Index" class="btn btn-lg btn-primary animated-button">View Menu</a>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card animated-card">
                <img src="/images/appetizer.jpg" class="card-img-top" alt="Appetizers">
                <div class="card-body">
                    <h5 class="card-title">Appetizers</h5>
                    <p class="card-text">Start your meal with our delicious appetizers.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card animated-card">
                <img src="/images/main-course.jpg" class="card-img-top" alt="Main Courses">
                <div class="card-body">
                    <h5 class="card-title">Main Courses</h5>
                    <p class="card-text">Indulge in our chef's specialties.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card animated-card">
                <img src="/images/dessert.jpg" class="card-img-top" alt="Desserts">
                <div class="card-body">
                    <h5 class="card-title">Desserts</h5>
                    <p class="card-text">Satisfy your sweet tooth with our desserts.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="row gap-4">
        <div id="lottie-container" class="lottie-animation col card"></div>
        <div class="col d-flex justify-content-center align-items-center order-heading">
            <h2>Order your preferred dish</h2>
        </div>
    </div>  
</div>

